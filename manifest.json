{
  "name": "Sit Better",
  "version": "0.1",
  "description": "Minimally configurable sit-up (keep your back straight) notification system",
  "icons": { "16": "16.png", "48": "48.png", "128": "128.png" },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "idle",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": true
  },
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Sit Straight Event",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "web_accessible_resources": ["48.png"]
}
